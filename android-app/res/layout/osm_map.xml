<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootMapView">

        <org.osmdroid.views.MapView
            android:id="@+id/mapview"
            android:layout_width="match_parent" 
            android:layout_height="match_parent"
            android:enabled="true"      
            android:clickable="true"            
        />
        
        <ImageButton 
            android:id="@+id/locateButton" 
            android:layout_width="50dp" 
            android:layout_height="32dp"/>
        
        <ImageButton 
            android:id="@+id/addPointButton"
            android:layout_width="50dp" 
            android:layout_height="32dp"
            android:layout_toRightOf="@id/locateButton" />
        
        <ImageButton 
            android:id="@+id/addLineButton"
            android:layout_width="50dp" 
            android:layout_height="32dp"
            android:layout_toRightOf="@id/addPointButton" />
        
        <ImageButton 
            android:id="@+id/addPlotButton"
            android:layout_width="50dp" 
            android:layout_height="32dp"
            android:layout_toRightOf="@id/addLineButton" />
        
        <ImageButton 
            android:id="@+id/finishAddingPlotButton"
            android:layout_width="50dp" 
            android:layout_height="32dp"
            android:layout_toRightOf="@id/addPlotButton"
            android:visibility="gone" />
               
</RelativeLayout>